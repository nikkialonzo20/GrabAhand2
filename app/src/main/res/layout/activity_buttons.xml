<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nikkialonzo.grabahand.Buttons">

    <Space
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/settings"
        android:id="@+id/btnSettings"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/btnHospital"
        android:background="@mipmap/hospital"
        android:contentDescription="@string/hospital"
        android:layout_above="@+id/btnPolice"
        android:layout_toStartOf="@+id/center" />

    <ImageButton
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/btnPolice"
        android:background="@mipmap/pnew"
        android:contentDescription="@string/police"
        android:layout_alignTop="@+id/center"
        android:layout_alignEnd="@+id/center" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/btnMechanic"
        android:background="@mipmap/mechanic"
        android:contentDescription="@string/mechanic"
        android:layout_below="@+id/center"
        android:layout_toEndOf="@+id/btnPolice" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/btnFire"
        android:contentDescription="@string/firestation"
        android:background="@mipmap/fire"
        android:layout_alignBottom="@+id/center"
        android:layout_toEndOf="@+id/center" />

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSettings"
        android:layout_toEndOf="@+id/btnFire"
        android:id="@+id/btnLogout" />
</RelativeLayout>
